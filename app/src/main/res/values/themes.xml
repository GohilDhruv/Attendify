<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#232329</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:spinnerItemStyle">@style/SpinnerTextStyle</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SpinnerTextStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Screen">
        <item name="android:background">@color/background_light</item>
    </style>
    <style name="TextColor">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Card">
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    <style name="Loading">
        <item name="android:tint">@color/black</item>
    </style>
    <style name="ButtonTextColor">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>