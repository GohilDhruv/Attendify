<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/Screen"

    android:padding="16dp"
    tools:context=".StartActivity">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:layout_marginBottom="20dp"
        style="@style/Card"
        android:layout_gravity="center_horizontal"
        app:cardElevation="4dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:src="@drawable/attendify_splash_screen"/>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="match_parent"
        android:orientation="vertical"
        style="@style/Screen">

        <TextView
            android:id="@+id/title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose an option"
            style="@style/TextColor"
            android:layout_marginBottom="60dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/divisionAButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_bg_dark"
            android:elevation="10dp"
            android:stateListAnimator="@null"
            android:text="Take Attendance"
            android:onClick="takeAttendance"
            android:textColor="@android:color/white"
            android:textSize="20sp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/divisionBButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_bg_dark"
        android:onClick="downloadAttendance"
        android:text="Download Attendance"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/checkAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_bg_dark"
        android:onClick="checkAttendance"
        android:text="check Attendance"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_bg_dark"
        android:onClick="logoout"
        android:text="logout"
        android:textColor="@android:color/white"
        android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>
